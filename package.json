{
  "name": "github-actions-demo",
  "version": "1.0.0",
  "description": "GitHub Actions CI/CD 실습 프로젝트",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "license:check": "npm ls --depth=0 && echo 'License check completed'",
    "build": "echo 'Build completed'",
    "docker:build": "docker build -f Dockerfile -t github-actions-demo:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t github-actions-demo:dev .",
    "docker:build:test": "docker build -f Dockerfile.test -t github-actions-demo:test .",
    "docker:build:multistage": "docker build -f Dockerfile.multistage -t github-actions-demo:multistage .",
    "docker:run": "docker run -p 3000:3000 github-actions-demo:latest",
    "docker:run:dev": "docker run -p 3000:3000 github-actions-demo:dev",
    "docker:run:test": "docker run --rm github-actions-demo:test",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "deploy:local": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh local",
    "deploy:staging": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh staging",
    "deploy:production": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh production",
    "day1:scope": "bash scripts/day-config.sh day1 scope",
    "day1:build": "bash scripts/day-config.sh day1 build",
    "day1:test": "bash scripts/day-config.sh day1 test",
    "day1:deploy": "bash scripts/deploy.sh aws vm dev",
    "day1:all": "bash scripts/day-config.sh day1 all",
    "day2:scope": "bash scripts/day-config.sh day2 scope",
    "day2:build": "bash scripts/day-config.sh day2 build",
    "day2:test": "bash scripts/day-config.sh day2 test",
    "day2:deploy": "bash scripts/deploy.sh gcp k8s staging",
    "day2:all": "bash scripts/day-config.sh day2 all",
    "day3:scope": "bash scripts/day-config.sh day3 scope",
    "day3:build": "bash scripts/day-config.sh day3 build",
    "day3:test": "bash scripts/day-config.sh day3 test",
    "day3:deploy": "bash scripts/deploy.sh production production prod",
    "day3:all": "bash scripts/day-config.sh day3 all",
    "check:auth": "bash scripts/check-auth.sh",
    "setup:env": "bash scripts/setup-env.sh",
    "fix:issues": "bash scripts/fix-issues.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  }
}
